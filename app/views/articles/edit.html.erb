<div class="container article-new">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 class="text-center my-4">Edit your article</h1>

      <%= simple_form_for(@article) do |f| %>
        <%= f.input :title, label: false %>
        <%= f.input :image_url, label: false %>
        <%= f.rich_text_area :content, class: "article-action-text" %>
        <div class="w-100 d-flex justify-content-center">
          <%= f.submit "Save the article", class: "article-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
