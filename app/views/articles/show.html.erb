<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @article.image_url %>);"></div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">

      <div class="article-infos">
        <div class="card-initials"><%= @initials %></div>
        <p class="description">
          <%= @article.author.username %> • <%= @article.created_at.strftime("%B %d") %> • <%= @article.reading_time %> min de lecture
        </p>
        <span class="mr-2"> • <%= link_to " ✎ Article", edit_article_path %> </span>
        <span> • <%= link_to " ✎ Tags", new_article_article_tag_path(@article) %> </span>
      </div>

      <div class="article-tags">
        <% @article.tags.uniq.each do |tag| %>
          <div class="tag-item">
            <%= tag.tag_type %>
          </div>
        <% end %>
      </div>

      <div class="content">
      <h1 class="title-article"><%= @article.title %></h1>

      <div class="article-content">
        <%= @article.content %>
      </div>
      
      </div>
    </div>
  </div>
</div>


