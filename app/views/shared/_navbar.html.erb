<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to articles_path do %>
    <div class="navbar-name">
      <p>Anne-Laure Davy |</p><span>Exploring thoughts, ideas & life</span>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item mr-2 active">
        <%= link_to "Blog", articles_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item mr-2 active">
          <%= link_to "New Article", new_article_path, class: "nav-link" %>
        </li>
      <% end %>
      <% if user_signed_in? %>  
        <li class="nav-item dropdown d-flex align-items-center">
          <i class="dropdown-toggle fa-2x" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i> 
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "dropdown-item" %>        
          </div>
        </li>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "d-flex align-items-center" %>  
      <% end %>
    </ul>
  </div>
</div>
